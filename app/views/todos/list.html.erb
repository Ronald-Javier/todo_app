

     <div class="row" id="list">
        <div class="col-6">
          <h3 class="text-light text-center">No Completed</h3>
            <% @todo_uncompleted.each do |todo| %>
                <div class="card">
                    <div class="card-body">
                    <%= todo.description %><br>
                    </div>
                </div>
                <br>
            <% end %>
        </div>

        <div class="col-6">
            <h3 class="text-light text-center">Completed</h3>
            <% @todo_completed.each do |todo| %>
                <div class="card">
                    <div class="card-body">
                        <%= todo.description %><br>
                    </div>
                </div>
                <br>
           <% end %>
        </div>
    </div>

